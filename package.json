{
  "name": "chatluthier",
  "version": "1.0.0",
  "description": "Le Chat Luthier is your immersive sound companion for enhancing role-playing games, storytelling sessions, or any experience that benefits from atmospheric audio. Use `npm run local` or `npm run npm:local` to start the local development server.",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "start": "webpack --config webpack.config.js && node server.js",
    "local": "concurrently \"NODE_ENV=local webpack serve --mode development\" \"node server.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^8.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.11.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.49",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "webpack": "^5.96.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
